<h1>Videos#new</h1>
<p>Find me in app/views/videos/new.html.erb</p>

<div class="container">
  <h1>New Video</h1>

  <%= form_for @video do |f|  %>
    <div class="video-group">
      <%= f.label :link %>
      <%= f.text_field :link, class: 'video-control', require: true %>

      <span class="video-block">
        A link to the video on YouTube.
      </span>

      <%= submit_tag 'Upload', class: "btn btn-blue btn-large" %>
    </div> <!-- video-group -->
  <% end %>
</div>
